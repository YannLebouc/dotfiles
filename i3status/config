general {
    colors = true
    interval = 1
}

order += "volume master"
order += "ethernet _first_"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "tztime local"

volume master {
    format = "VOL %volume"
    format_muted = "MUTED"
    device = "default"
    mixer = "Master"
}

ethernet _first_ {
    format_up = "NET %ip"
    format_down = "NET down"
}

cpu_usage {
    format = "CPU %usage"
}

memory {
    format = "RAM %used/%total"
}

disk "/" {
    format = "SSD %avail"
}

tztime local {
    format = "%Y-%m-%d %H:%M"
}
